<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#110E8810"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ED1B1B"
            android:textSize="18dp"
            android:drawableLeft="@drawable/icon_thongbao"
            android:text="Thông báo "/>

        <TextView
            android:id="@+id/txtthongbao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Bạn đã thêm sản phẩm Tai nghe mèo Bluetooth P47M dễ thương xanh navi Giá rẻ vào trang yêu thích"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>